{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.styled.ts", "*.styles.ts"],
      "options": {
        "parser": "typescript",
        "embeddedLanguageFormatting": "auto",
        "bracketSameLine": false,
        "templateLiterals": {
          "indent": 2,
          "padding": {
            "before": 1,
            "after": 1
          }
        }
      }
    }
  ]
}
